        axes[i].set_title(f'{metric.replace("_", " ").title()}')
        axes[i].set_xlabel('Time Window')
        axes[i].set_ylabel('Value')
        axes[i].grid(True, alpha=0.3)

plt.tight_layout()
plt.show()

