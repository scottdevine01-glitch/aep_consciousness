# 1. Generate sample data representing different states
print("\n1. Generating neural data for different states...")

def generate_conscious_state(n_time=2000, n_neurons=50):
    """Generate data with conscious-like characteristics"""
    t = np.linspace(0, 20, n_time)
    
    # Create integrated, structured activity
    base_signals = [
        np.sin(2 * np.pi * 4 * t),
        np.sin(2 * np.pi * 8 * t + 0.5),
        np.sin(2 * np.pi * 12 * t + 1.0),
        0.5 * np.sin(2 * np.pi * 2 * t)
    ]
    
    data = np.zeros((n_time, n_neurons))
    for i in range(n_neurons):
        weights = np.random.dirichlet(np.ones(len(base_signals)))
        neuron_signal = sum(w * s for w, s in zip(weights, base_signals))
        data[:, i] = neuron_signal + 0.1 * np.random.randn(n_time)
    
    return data

def generate_unconscious_state(n_time=2000, n_neurons=50):
    """Generate data with unconscious-like characteristics"""
    data = np.zeros((n_time, n_neurons))
    for i in range(n_neurons):
        # Mostly random with occasional bursts
        data[:, i] = np.random.randn(n_time)
        for j in range(10, n_time, 100):
            data[j:j+5, i] += 3.0  # Random bursts
    
    return data

# Generate datasets
conscious_data = generate_conscious_state()
unconscious_data = generate_unconscious_state()

print(f"Conscious state data shape: {conscious_data.shape}")
print(f"Unconscious state data shape: {unconscious_data.shape}")

