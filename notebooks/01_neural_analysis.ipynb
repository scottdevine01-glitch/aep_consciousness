# Radar plot
def create_radar_plot(conscious_vals, unconscious_vals, metrics, ax):
    angles = np.linspace(0, 2*np.pi, len(metrics), endpoint=False).tolist()
    conscious_vals += conscious_vals[:1]  # Complete circle
    unconscious_vals += unconscious_vals[:1]
    angles += angles[:1]
    
    ax.plot(angles, conscious_vals, 'o-', linewidth=2, label='Conscious', alpha=0.7)
    ax.fill(angles, conscious_vals, alpha=0.25)
    ax.plot(angles, unconscious_vals, 'o-', linewidth=2, label='Unconscious', alpha=0.7) 
    ax.fill(angles, unconscious_vals, alpha=0.25)
    
    ax.set_xticks(angles[:-1])
    ax.set_xticklabels([m.replace('_', '\n') for m in metrics])
    ax.set_title('Compression Metrics Radar Plot')

# Normalize for radar plot (0-1 scale)
def normalize_radar_data(values, metrics):
    normalized = []
    for i, metric in enumerate(metrics):
        if metric in ['intrinsic_dimensionality', 'predictive_complexity']:
            # Lower is better for consciousness
            normalized.append(1 - min(values[i] / 50, 1.0))
        else:
            # Higher is better for consciousness  
            normalized.append(min(values[i] / (np.max(values) if np.max(values) > 0 else 1), 1.0))
    return normalized

conscious_norm = normalize_radar_data(conscious_values, metrics_to_plot)
unconscious_norm = normalize_radar_data(unconscious_values, metrics_to_plot)

create_radar_plot(conscious_norm, unconscious_norm, metrics_to_plot, ax2)

plt.tight_layout()
plt.show()

# 4. Consciousness detection
print("\n4. Consciousness Detection Analysis...")

def detect_consciousness(metrics):
    """AEP-based consciousness detection"""
    criteria = [
        metrics['intrinsic_dimensionality'] < 15,           # Low dimensionality
        metrics['predictive_complexity'] < 0.4,             # High predictability  
        metrics['information_integration'] > 0.02,          # Integrated information
        metrics['network_efficiency'] > 0.1,                # Efficient connectivity
        metrics['multi_scale_entropy'] > 0.5,               # Structured complexity
    ]
    
    score = sum(criteria) / len(criteria)
    return score, score > 0.6  # Threshold for consciousness

conscious_score, conscious_detected = detect_consciousness(conscious_metrics)
unconscious_score, unconscious_detected = detect_consciousness(unconscious_metrics)

print(f"Conscious state detection score: {conscious_score:.3f} -> {'CONSCIOUS' if conscious_detected else 'UNCONSCIOUS'}")
print(f"Unconscious state detection score: {unconscious_score:.3f} -> {'CONSCIOUS' if unconscious_detected else 'UNCONSCIOUS'}")

# 5. Temporal dynamics analysis
print("\n5. Analyzing temporal dynamics...")

# Analyze how metrics change over time (simplified)
def analyze_temporal_dynamics(data, window_size=500):
    """Analyze how compression metrics evolve over time"""
    n_windows = data.shape[0] // window_size
    temporal_metrics = {metric: [] for metric in metrics_to_plot}
    
    analyzer = NeuralCompressionAnalyzer()
    
    for i in range(n_windows):
        window_data = data[i*window_size:(i+1)*window_size, :]
        metrics = analyzer.compute_all_metrics(window_data)
        
        for metric in metrics_to_plot:
            if metric in metrics:
                temporal_metrics[metric].append(metrics[metric])
    
    return temporal_metrics

print("Analyzing conscious state temporal dynamics...")
conscious_temporal = analyze_temporal_dynamics(conscious_data)

# Plot temporal evolution
